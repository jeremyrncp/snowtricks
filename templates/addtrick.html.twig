{% extends "layout/base.html.twig" %}
{% block header %}
{% endblock %}

{% block body %}
<div class="content">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-3 font-weight-normal">Add a trick</h1>
            {% form_theme form with ['bootstrap_4_layout.html.twig', 'elmt/jquery.collection.html.twig'] %}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <input type="submit" class="btn btn-block btn-success" value="Add trick" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
    <script src="{{ asset('libs/jquery.collection.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $('.collection-trick').collection({
            max: 10,
            up: '<a href="#" class="btn btn-primary"><i class="fa fa-arrow-up"></i></a>',
            down: '<a href="#" class="btn btn-primary"><i class="fa fa-arrow-down"></i></a>',
            add: '<a href="#" class="btn btn-primary"><i class="fas fa-plus"></span></a>',
            remove: '<a href="#" class="btn btn-primary"><i class="fa fa-trash"></i></a>',
            name_prefix: ''
        });
    </script>
{% endblock %}